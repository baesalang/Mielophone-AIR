<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="400" height="300">
	
	<fx:Script source="../../../logic/SongSearchView.as" />
	
	<!-- background fill -->
	<s:Rect left="0" right="0" top="0" bottom="0" >
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#DDDDDD" />
				<s:GradientEntry color="#FFFFFF" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<!-- search input -->
	<s:TextInput top="0" left="0" right="0" height="26"
				 fontSize="22"
				 prompt="Song search.." />
	
	<!-- result list -->
	<s:Scroller left="0" right="0" top="26" bottom="0" skinClass="com.codezen.skins.scroll.SmallScroll">
		<s:DataGroup width="100%" height="100%" id="songList" itemRenderer="mielophone.ui.itemrenderers.SongItem">
			<s:layout>
				<s:VerticalLayout gap="5" />
			</s:layout>
		</s:DataGroup>
	</s:Scroller>
	
</s:Group>
